<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.secret_santa.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.secret_santa.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/listPageUserFragment"
        android:name="com.example.secret_santa.userlistpage.ListPageUserFragment"
        android:label="@string/user_list_fragment_label">
        <argument
            android:name="users"
            app:argType="com.example.secret_santa.model.User[]"/>
        <action
            android:id="@+id/action_to_details"
            app:destination="@+id/detailsUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsUserFragment"
        android:name="com.example.secret_santa.DetailsUserFragment"
        android:label="@string/user_detail_fragment_label">
        <argument
            android:name="user"
            app:argType="com.example.secret_santa.model.User" />
    </fragment>
</navigation>